{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":enablePreCommit"
  ],
  "schedule": [
    "before 6am on Monday"
  ],
  "timezone": "America/New_York",
  "labels": ["dependencies"],
  "assigneesFromCodeOwners": true,
  "reviewersFromCodeOwners": true,
  "packageRules": [
    {
      "description": "Security updates - auto-merge patch and minor",
      "matchDatasources": ["pypi"],
      "matchUpdateTypes": ["patch", "minor"],
      "matchDepTypes": ["dependencies", "dev"],
      "vulnerabilityAlerts": {
        "enabled": true
      },
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "description": "Security updates - require review for major",
      "matchDatasources": ["pypi"],
      "matchUpdateTypes": ["major"],
      "vulnerabilityAlerts": {
        "enabled": true
      },
      "automerge": false
    },
    {
      "description": "Group pre-commit hook updates",
      "matchManagers": ["pre-commit"],
      "groupName": "pre-commit hooks",
      "automerge": true,
      "schedule": ["before 6am on Monday"]
    },
    {
      "description": "Group dev dependencies",
      "matchDepTypes": ["dev"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "dev dependencies",
      "automerge": true
    },
    {
      "description": "Separate PR for major dev dependency updates",
      "matchDepTypes": ["dev"],
      "matchUpdateTypes": ["major"],
      "groupName": "dev dependencies (major)",
      "automerge": false
    },
    {
      "description": "Python version updates",
      "matchPackageNames": ["python"],
      "enabled": false,
      "reviewersFromCodeOwners": true
    }
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "rebaseWhen": "behind-base-branch",
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "automerge": true,
    "automergeType": "pr",
    "assignees": ["@karlmdavis"]
  },
  "python": {
    "enabled": true
  },
  "pip_requirements": {
    "enabled": false
  },
  "pre-commit": {
    "enabled": true
  }
}
